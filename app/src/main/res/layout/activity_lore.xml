<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".activities.Lore_Activity">

    <TextView
        android:id="@+id/lorePlayerName"
        android:text="@string/home_page_character_name"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/loreBackground"
        android:text="@string/background"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lorePlayerName"
        app:layout_constraintBottom_toTopOf="@id/loreAlignment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/loreAlignment"
        android:text="@string/alignment"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loreBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/lorePersonalityTraitsText"
        android:textSize="14sp"
        android:background="@drawable/tab_shape"
        android:text="@string/personality_traits"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/loreAlignment"
        app:layout_constraintBottom_toTopOf="@id/loreIdealsText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/lorePersonalityTraitsDescription"
        android:text="@string/pt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lorePersonalityTraitsText"
        app:layout_constraintBottom_toBottomOf="@id/lorePersonalityTraitsText"
        app:layout_constraintLeft_toLeftOf="@id/lorePersonalityTraitsText"
        app:layout_constraintRight_toRightOf="@id/lorePersonalityTraitsText"/>

    <TextView
        android:id="@+id/loreIdealsText"
        android:textSize="14sp"
        android:background="@drawable/tab_shape"
        android:text="@string/ideals"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lorePersonalityTraitsText"
        app:layout_constraintBottom_toTopOf="@id/loreBondsText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/loreIdealsDescription"
        android:text="@string/i_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/loreIdealsText"
        app:layout_constraintBottom_toBottomOf="@id/loreIdealsText"
        app:layout_constraintLeft_toLeftOf="@id/loreIdealsText"
        app:layout_constraintRight_toRightOf="@id/loreIdealsText"/>

    <TextView
        android:id="@+id/loreBondsText"
        android:textSize="14sp"
        android:text="@string/bonds"
        android:textAlignment="center"
        android:background="@drawable/tab_shape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/loreIdealsText"
        app:layout_constraintBottom_toTopOf="@id/loreFlawsText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/loreBondsDescription"
        android:text="@string/b_description"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/loreBondsText"
        app:layout_constraintBottom_toBottomOf="@id/loreBondsText"
        app:layout_constraintLeft_toLeftOf="@id/loreBondsText"
        app:layout_constraintRight_toRightOf="@id/loreBondsText"/>

    <TextView
        android:id="@+id/loreFlawsText"
        android:textSize="14sp"
        android:text="@string/flaws"
        android:textAlignment="center"
        android:background="@drawable/tab_shape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/loreBondsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/loreFlawsDescription"
        android:text="@string/f_description"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/loreFlawsText"
        app:layout_constraintBottom_toBottomOf="@id/loreFlawsText"
        app:layout_constraintLeft_toLeftOf="@id/loreFlawsText"
        app:layout_constraintRight_toRightOf="@id/loreFlawsText"/>

</android.support.constraint.ConstraintLayout>